<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Full Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/viewFullNameTag"
        android:fontFamily="sans-serif"
        android:layout_above="@+id/viewUserUsername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp" />

    <TextView
        android:text="Username:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_alignBaseline="@+id/viewUserUsername"
        android:layout_alignBottom="@+id/viewUserUsername"
        android:layout_alignLeft="@+id/viewFullNameTag"
        android:layout_alignStart="@+id/viewFullNameTag" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/viewUserUsername"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/viewUserName"
        android:layout_alignLeft="@+id/viewUserName"
        android:layout_alignStart="@+id/viewUserName" />

    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="Bio:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="17dp"
        android:id="@+id/textView8"
        android:fontFamily="sans-serif"
        android:textSize="16sp" />

    <TextView
        android:text="Company:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textView10"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/viewUserBio"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewUserEmail"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:text="Company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/viewUserCompany"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="Full Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewUserName"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="110dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView12"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewUserLocation"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignLeft="@+id/viewUserCompany"
        android:layout_alignStart="@+id/viewUserCompany" />

    <TextView
        android:text="Repo Count:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginTop="22dp"
        android:id="@+id/textView14"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/github_logo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="26dp"
        android:id="@+id/viewUserGitHub" />

    <TextView
        android:text="RepoCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewUserRepoCount"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_marginLeft="130dp"/>

    <TextView
        android:text="Bio"
        android:layout_height="wrap_content"
        android:id="@+id/viewUserBio"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_width="350dp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/hangouts_logo"
        android:id="@+id/viewUserHangouts"
        android:layout_alignTop="@+id/viewUserGitHub"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />
</RelativeLayout>